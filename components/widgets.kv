#:kivy 2.3.0
# widgets.kv

<Box1@BoxLayout>:
    orientation: 'vertical'
    size_hint_x: None
    width: 600
    size_hint_y: None
    height: self.minimum_height  # Adjust height based on content
    padding: 20, 10, 20, 10
    spacing: 10

    canvas.before:
        Color:
            rgba: 0.42, 0.42, 0.42, 1
        RoundedRectangle:
            pos: self.pos[0]+5, self.pos[1]+5
            size: self.size[0]-10, self.size[1]-10
            radius: [10]
        Color:
            rgba: 0.13, 0.13, 0.13, 1
        RoundedRectangle:
            pos: self.pos[0]+6, self.pos[1]+6
            size: self.size[0]-12, self.size[1]-12
            radius: [10]
        

<Box2@BoxLayout>:
    orientation: 'vertical'
    size_hint_x: 1
    size_hint_y: None
    height: self.minimum_height  # Adjust height based on content
    padding: 20, 10, 20, 10
    spacing: 10

    canvas.before:
        Color:
            rgba: 0.42, 0.42, 0.42, 1
        RoundedRectangle:
            pos: self.pos[0]+5, self.pos[1]+5
            size: self.size[0]-10, self.size[1]-10
            radius: [5]
        Color:
            rgba: 0.23, 0.23, 0.23, 1
        RoundedRectangle:
            pos: self.pos[0]+6, self.pos[1]+6
            size: self.size[0]-12, self.size[1]-12
            radius: [5]

<Heading1@Label>:
    size_hint_y: None
    height: 30  # Fixed height
    text_size: self.size
    halign: 'left'
    valign: 'bottom'
    font_size: 20
    color: 0.42, 0.42, 0.42, 1


<Heading2@Heading1>:
    height: 25  # Fixed height
    font_size: 15

<TableHeader@Label>:
    size_hint_y: None
    height: 25
    bold: True
    text_size: self.size
    halign: 'center'

<TableRow@Label>:
    size_hint_y: None
    height: 30


<Randomize@Button>:
    text: 'Generate new palette'
    size_hint_y: None
    height: 30  # Fixed height

<Cosine@BoxLayout>:
    action: action
    a_r: a_r

    orientation: 'horizontal'
    size_hint_y: None
    height: 30  # Fixed row height
    spacing: 10
    
    Label:
        text: 'Red offset:'
        size_hint_x: None
        width: 200  # Fixed width
        text_size: self.size
        halign: 'right'
        valign: 'middle'
    
    Slider:
        id: a_r
        min: -1
        max: 1
        step: 0.1
        orientation: 'horizontal'
        on_value: action