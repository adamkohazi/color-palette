#:kivy 2.3.0
# colorbox.kv

<ColorBox>:
    remove: lambda *args: None # Function that does nothing, but can be set to another function, once class is used elsewhere
    
    orientation: 'horizontal'
    size_hint_y: None
    height: 30

    # Colored background
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            pos: self.pos
            size: self.size

    # Delete entry
    Button:
        id: delete_button
        size_hint_x: None
        width: 30
        text: '-'
        on_press: root.remove(root)
    
    # RGB values
    Label:
        size_hint_x: None
        width: 100
        text: root.rgb_hex
    
    # R, G, B values
    Button:
        size_hint_x: None
        width: 20
        text: '-'
    Label:
        text: root.color_model_1_component_1
    Button:
        size_hint_x: None
        width: 20
        text: '+'
    
    Label:
        text: root.color_model_1_component_2
    
    Label:
        text: root.color_model_1_component_3
    
    # X, Y, Z values
    Button:
        size_hint_x: None
        width: 20
        text: '-'
    Label:
        text: root.color_model_2_component_1
    Button:
        size_hint_x: None
        width: 20
        text: '+'
    
    Label:
        text: root.color_model_2_component_2
    
    Label:
        text: root.color_model_2_component_3
