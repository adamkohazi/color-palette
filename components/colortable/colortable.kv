#:kivy 2.3.0
# colortable.kv

<TableHeader@Label>:
    size_hint_y: None
    height: 25
    bold: True
    text_size: self.size
    halign: 'center'

<ColorTable>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height  # Adjust height based on content

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 30

        TableHeader: # Just a spacer for the buttons
            size_hint_x: None
            width: 130
            text: ''
        
        Spinner:
            text: root.color_model_1.ID
            values: root.spinner_values
            on_text:
                root.set_color_model_1(self.text)
        
        Spinner:
            text: root.color_model_2.ID
            values: root.spinner_values
            on_text:
                root.set_color_model_2(self.text)

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 30

        TableHeader:
            size_hint_x: None
            width: 30
            text: 'Del'
        
        TableHeader:
            size_hint_x: None
            width: 100
            text: 'sRGB hex'
        
        TableHeader:
            text: root.color_model_1_component_1
        
        TableHeader:
            text: root.color_model_1_component_2
        
        TableHeader:
            text: root.color_model_1_component_3
        
        TableHeader:
            text: root.color_model_2_component_1
        
        TableHeader:
            text: root.color_model_2_component_2
        
        TableHeader:
            text: root.color_model_2_component_3
        
    BoxLayout:
        id: color_entries
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height  # Adjust height based on content
