#:kivy 2.3.0
# colortable.kv

<TableHeader@Label>:
    size_hint_y: None
    height: 25
    bold: True
    text_size: self.size
    halign: 'center'

<ColorTable>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height  # Adjust height based on content

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 30

        TableHeader: # Just a spacer for the buttons
            size_hint_x: None
            width: 130
            text: ''
        
        Spinner:
            text: root.color_model_1
            values: root.spinner_values
            on_text:
                root.color_model_1 = self.text
        
        Spinner:
            text: root.color_model_2
            values: root.spinner_values
            on_text:
                root.color_model_2 = self.text

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 30

        TableHeader:
            size_hint_x: None
            width: 30
            text: 'Del'
        
        TableHeader:
            size_hint_x: None
            width: 100
            text: 'sRGB hex'
        
        TableHeader:
            id: cm_1_1
            text: 'R'
        
        TableHeader:
            id: cm_1_2
            text: 'G'
        
        TableHeader:
            id: cm_1_3
            text: 'B'
        
        TableHeader:
            id: cm_2_1
            text: 'X'
        
        TableHeader:
            id: cm_2_2
            text: 'Y'
        
        TableHeader:
            id: cm_2_3
            text: 'Z'
        
    BoxLayout:
        id: color_entries
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height  # Adjust height based on content
